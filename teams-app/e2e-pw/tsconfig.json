{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "lib": ["ES6", "dom", "dom.iterable"],
        "types": ["node"],
        "sourceMap": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "oss/*": ["./.oss/*"]
        }
    },
    "include": [
        "src/**/*",
        ".oss/**/*",
        "playwright.config.ts",
        "tsconfig.json"
    ],
    "exclude": ["node_modules"]
}
