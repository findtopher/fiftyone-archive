{
    "compilerOptions": {
        "downlevelIteration": true,
        "importHelpers": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
