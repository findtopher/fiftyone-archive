{
    "include": ["./src"],
    "outDir": "./build",
    "rootDir": "./src",
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "lib": ["es2020", "dom"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true
    }
}
